.image-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
	flex-direction: column;
	border-radius: 10px;
	z-index: 10000;
}
.image-container {
	background-color: rgba(99, 133, 206, 0.5); /* 背景色为半透明的灰色 */
