<!--pages/checkActivity/checkActivity.wxml-->
<view class="cu-list menu card-menu margin-bottom-xl shadow-lg radius">
	<view class="cu-form-group" style="width: auto;">
		<view class="title" >活动名称</view>
		<view>广州大学计院三下乡科技振兴团队</view>
	</view>

	<view class="cu-bar bg-white margin-top font-black">
		<view class="action">
			签到表上传
		</view>
		<view class="action">
			{{signInList.length}}/8
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{signInList}}" wx:key="{{index}}" bindtap="ViewImage"  data-url="{{signInList[index]}}">
				<image src='{{signInList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-param="signInList" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage"  data-param="signInList" wx:if="{{signInList.length<8}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
	<view class="cu-form-group">
  <view class="action">
    <text class="title">实到队员</text> 
  </view>
  <view class="action">
    <button class="cu-btn bg-green shadow" bindtap="showModal" data-target="ChooseModalOne">选择</button>
  </view>
	</view>
	<view class="cu-form-group">
  <view class="action">
    <text class="title">优秀队员</text> 
  </view>
  <view class="action">
    <button class="cu-btn bg-green shadow" bindtap="showModal" data-target="ChooseModal">选择</button>
  </view>
	</view>
	<view class="cu-form-group" style="	flex-wrap: wrap;">
		<view class="title">差评队员</view>
		<view class="showname">
			<view wx:for="{{checkbox}}" wx:key="{{id}}" wx:for-item="item">
			<button wx:if="{{item.checked}}" bindtap="showNGModal" data-target="BottomModal" data-btnid="{{item.id}}">
				{{item.name}}
			</button>
		</view>
		</view>
	</view>
	
<view class="cu-modal bottom-modal {{modalName=='ChooseModalOne'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap>
    <view class="cu-bar bg-white">
      <view class="action text-blue" bindtap="hideModal">取消</view>
      <view class="action text-green" bindtap="hideModal">确定</view>
    </view>
    <view class="grid col-3 padding-sm">
			<view wx:for="{{checkbox}}" class="padding-xs" wx:key="{{index}}">
        <button class="cu-btn lg block {{item.isCome?'btn-green':'line-green'}}" bindtap="ChooseIsCome" data-value="{{item.id}}"> {{item.name}}
        </button>
      </view>
    </view>
  </view>
</view>

<view class="cu-modal bottom-modal {{modalName=='ChooseModal'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap>
    <view class="cu-bar bg-white">
      <view class="action text-blue" bindtap="hideModal">取消</view>
      <view class="action text-green" bindtap="hideModal">确定</view>
    </view>
    <view class="grid col-3 padding-sm">
			<view wx:for="{{checkbox}}" class="padding-xs" wx:key="{{index}}">
        <button class="cu-btn lg block {{item.checked?'btn-green':'line-green'}}" bindtap="ChooseCheckbox" data-value="{{item.id}}"> {{item.name}}
        </button>
      </view>
    </view>
  </view>
</view>
	
	<view class="cu-bar bg-white margin-top">
		<view class="action">
			活动图片上传
		</view>
		<view class="action">
			{{imgList.length}}/8
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-param="imgList"  data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" data-param="imgList" wx:if="{{imgList.length<8}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>

	<view class="box">
		<view class="cu-bar btn-group margin-top">
			<button class="cu-btn bg-green shadow-blur round lg">保存</button>
		</view>
	</view>

	<view class="cu-modal {{modalName=='BottomModal'?'show':''}}">
	<view class="cu-dialog">
  <view class="cu-bar bg-white justify-end">
    <view class="content">差评原因</view>
    <view class="action" bindtap="hideModal">
      <text class="cuIcon-close text-red"></text>
    </view>
  </view>
  <view class="not-good-reason">
    <textarea class="not-good-reason-textarea" 
		placeholder="请输入差评原因" 
		bindinput="handleInput" 
		value="{{tempValue}}"
		auto-focus></textarea>
  </view>
	</view>
</view>
</view>

