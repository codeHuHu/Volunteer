
<scroll-view scroll-y class="cu-drawer-page {{modalName=='viewModal'?'show':''}}">
<view wx:if = "{{!actionList.length}}" class="margin-tb-sm padding-top-lg padding-bottom-xl">
  <view class="flex justify-center text-xsl">
    <view class="cuIcon-searchlist text-gray icon"></view>
  </view>
  <view class="flex justify-center padding-top-sm">
    <view class="text-gray text">暂无数据</view>
  </view>
</view>

<block wx:for="{{actionList}}" wx:key="index">
	<view class="cu-card article {{isCard?'no-card':''}} margin" bindtap="toDetail" data-id="{{item._id}}">
		<view class="cu-item shadow">
			<view class="title">
				<view class="text-cut">{{item.actName}}</view>
			</view>
			<view class="content">
				<view class="desc">
					<view class="character">
						<view wx:if="{{item.teamName.length!=0}}" class="cu-tag bg-red light sm round">{{item.teamName}}</view>
						<view class="cu-tag bg-green light sm round" style="white-space:normal;">{{item.tag}}</view>
						<view>
							<text class="data">{{item.ispintuan=='1'?'1':'0'}} 截止日期：{{data_Arr[index]}}</text>
						</view>
					</view>
					
				</view>
				
			</view>
		</view>
		
	</view>
	<view class="justify-end grid col-5 bg-white padding-sm margin  margin-bottom-xs margin-top-xs">
						<button class="sm cu-btn round bg-green margin-right {{shadow?'shadow':''}}" bind:tap="Agree" data-id="{{item._id}}">允许发布</button>
						<button class="sm cu-btn round bg-red {{shadow?'shadow':''}}" bind:tap="Reject" data-id="{{item._id}}">拒绝发布</button>
	</view>	
	
</block>

<!-- 轻提示 -->
<view class="toast-fixed-center" hidden="{{!show}}" style="z-index: 99;">
	<view class="radius-lg padding animation-slide-top text-lg {{status == 'success' ? 'bg-green light':'bg-red light'}}">
		<text class="cuIcon-info"></text> {{message}}
	</view>
</view>


<view class="RecycleBin" bindtap="showModal" data-target="viewModal">
  <text class="cuIcon-deletefill"></text>
</view>
</scroll-view>
<view class="cu-drawer-close {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
  <text class="cuIcon-pullright"></text>
</view>

<!-- 抽屉部分 -->
<scroll-view scroll-y class="cu-drawer-window {{modalName=='viewModal'?'show':''}}">
	<block wx:for="{{BinactionList}}" wx:key="index">
	<view class="cu-card article {{isCard?'no-card':''}} margin" bindtap="toDetail" data-id="{{item._id}}">
		<view class="cu-item shadow">
			<view class="title">
				<view class="text-cut">{{item.actName}}</view>
			</view>
			<view class="content">
				<view class="desc">
					<view class="character">
						<view wx:if="{{item.teamName.length!=0}}" class="cu-tag bg-red light sm round">{{item.teamName}}</view>
						<view class="cu-tag bg-green light sm round" style="white-space:normal;">{{item.tag}}</view>
						<view>
							<text class="data">{{item.ispintuan}} 截止日期：{{data_Arr[index]}}</text>
						</view>
					</view>
					
				</view>
				
			</view>
		</view>
		
	</view>
	<view class="justify-end grid col-5 bg-white padding-sm margin  margin-bottom-xs margin-top-xs">
						<button class="sm cu-btn round line-grey {{shadow?'shadow':''}}" style="margin-top:-20rpx"  data-id="{{item._id}}">已拒绝发布</button>
	</view>	

</block>

</scroll-view>