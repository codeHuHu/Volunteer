<view wx:if="{{actions.length}}">
<block wx:for="{{actions}}" wx:key="index">
	<view class="cu-card article {{isCard?'no-card':''}} margin">
		<view><image class="icon" src="/images/tabbar/sun.png"></image> </view>
		<view class="cu-item shadow">
			<view class="title">
				<view class="text-cut">{{item.actName}}</view>
			</view>
			<view class="content">
				<view class="desc" style="width: 100%; white-space:normal;">
					<view class="text-content" style="font-size: 25rpx; height:auto; margin: -10rpx 0rpx 10rpx 0rpx;">{{item.intro}}</view>
					<view class="character " style="justify-content: space-between; ">
						
						<view class="cu-tag bg-green light sm round" style="max-width: 200rpx; overflow: hidden;">{{item.tag}}</view>
						<view class="detail">
							<button class="btn-detail" bindtap="toDetail" data-id="{{item._id}}">查看</button>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</block>
</view>
<view wx:else style="display: flex; justify-content: center; align-items: center;" >
	<image mode="aspectFill"  style=" top:40rpx;width: 80%; opacity: .8;" src="/images/banner.png" />
</view>
<!-- 轻提示 -->
<view class="toast-fixed-center" hidden="{{!show}}" style="z-index: 99;">
	<view class="radius-lg padding animation-slide-top text-lg {{status == 'success' ? 'bg-green light':'bg-red light'}}">
		<text class="cuIcon-info"></text> {{message}}
	</view>
</view>

<view class="cu-modal {{modalName=='isAccess'?'show':''}}">
	<view class="cu-dialog">
		<view class="cu-bar bg-white justify-end">
			<view class="content text-red">温馨提示</view>
			<view class="action" bindtap="hideModal">
				<text class="cuIcon-close text-red"></text>
			</view>
		</view>
		<view class="padding-xl text-left justify-center flex">
			请确认已有i志愿服务的发布活动权限
		</view>
		<view class="cu-bar bg-white" catchtap="hideModal">
			<view class="action flex-sub solid-left" bindtap="handleNotHaveOption">
				<text>未有</text>
			</view>
			<view class="action flex-sub solid-left text-green" bindtap="toNewActivity">已有</view>
		</view>
	</view>
</view>
<view class="image-modal" wx:if="{{showImageModal}}">
	<button class="close-button" bindtap="hideImgmodal">×</button>
	<view class="image-container" bindtap="hideImgModal">
		<view class="box">
			<image src="{{imageSrc}}" mode="aspectFit" bindlongpress="longTap" data-url="{{imageSrc}}"></image>
			<text>请联系客服建立i志愿链接</text>
		</view>
	</view>
</view>