<view class="cu-list menu card-menu margin-bottom-xl shadow-lg radius padding-lr-sm">
	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>组织名称:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<input class="text-black padding-lr text-lg" placeholder="请输入你的组织名称" bindinput="getName" model:value="{{UserName}}" style="width:100%;height: 80rpx;"></input>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black flex justify-between ">
			<text class="text-bold ">组织类型:</text>
			<text class="text-lg text-gray">组织类型说明</text>
		</view>
		<view class="cu-form-group bg-oc-gray-2 radius margin-tb-xs solid ">
			<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
				<view class="picker flex text-black">
					{{index?picker[index]:'请选择组织类型'}}
				</view>
			</picker>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>管理员姓名:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<input class="text-black padding-lr text-lg" placeholder="请输入管理员姓名" bindinput="getName" model:value="{{UserName}}" style="width:100%;height: 80rpx;"></input>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>管理员身份证号码:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<input class="text-black padding-lr text-lg" placeholder="请输入管理员身份证号码" bindinput="getName" model:value="{{UserName}}" style="width:100%;height: 80rpx;"></input>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>管理员手机号码:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<input class="text-black padding-lr text-lg" placeholder="请输入管理员手机号码" bindinput="getName" model:value="{{UserName}}" style="width:100%;height: 80rpx;"></input>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>验证码:</text>
		</view>
		<view class=" radius margin-tb-xs flex">
			<view class="bg-oc-gray-2 flex-twice margin-right-sm  solid ">
				<input class="text-black padding-lr text-lg " placeholder="请输入验证码" bindinput="getName" model:value="{{UserName}}" style="width:90%;height: 80rpx;"></input>
			</view>
			<button class="flex-sub cu-btn bg-green shadow-blur round lg">获取验证码</button>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>邮箱:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<input class="text-black padding-lr text-lg" placeholder="请输入你的邮箱" bindinput="getName" model:value="{{UserName}}" style="width:100%;height: 80rpx;"></input>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>所在地区:</text>
		</view>
		<view class="cu-form-group bg-oc-gray-2 radius margin-tb-xs solid ">
			<picker class="" mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
				<view class="picker text-black flex">
					{{region[0]}}，{{region[1]}}，{{region[2]}}
				</view>
			</picker>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>组织申请函:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<input class="text-black padding-lr text-lg" placeholder="请上传组织申请函(未完善)" bindinput="getName" model:value="{{UserName}}" style="width:100%;height: 80rpx;"></input>
		</view>
	</view>

	<view class="content margin-bottom">
		<view class="text-lg text-black text-bold ">
			<text>组织介绍:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<textarea class="text-black padding-lr text-lg padding-tb" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="组织介绍不少于50个字" style="height: 200rpx;"></textarea>
		</view>
	</view>

	<view class="content margin-bottom-xl">
		<view class="text-lg text-black text-bold ">
			<text>申请原因:</text>
		</view>
		<view class="bg-oc-gray-2 radius margin-tb-xs solid">
			<textarea class="text-black padding-lr text-lg padding-tb" maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="申请原因不少于15个字" style="height: 150rpx;"></textarea>
		</view>
	</view>

	<view class="content">
		<checkbox class="round margin-right" checked="{{ischeck}}" bindtap="checkchange"></checkbox>
		<text class="">注册表示同意协议</text>
	</view>

	<view class="padding-xl" bindtap="register">
		<button class="cu-btn block bg-cyan margin-tb-xl lg round ">
			注册
		</button>
	</view>
</view>