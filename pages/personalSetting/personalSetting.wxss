/* 样式文件 */

.modal-title {
  font-size: 16px;

  margin-bottom: 10px;
  text-align: center;
}
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
 	z-index: 9999; /* 调整层级，确保模态框显示在最上层 */
}

.modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 10px;
  border-radius: 10px;
	text-align: center;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);

}

.input-field {
	background-color: rgb(248, 244, 244);
  width: 100%;
 
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
button {
	display: flex;
  background-color: #007AFF;
  color: #fff;
  padding: 8px 16px;
	border-radius: 4px;
	font-size: 30rpx;
	height: 50rpx;
	justify-content: center;
	align-items: center;
	line-height: 50rpx;
}