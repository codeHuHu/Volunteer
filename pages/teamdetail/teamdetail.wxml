<!--pages/teamdetail/teamdetail.wxml-->
<view class="cu-bar bg-white shadow">
	<text class="text-black text-bold text-xxl padding-xs">志愿队伍详情</text>
</view>

<view class="cu-list menu-avatar margin-top">
	<view class="cu-item">
		<view class="cu-avatar lg">
			<image class="cu-avatar round lg" src="cloud://volunteer-2ge0hjpsa1879e88.766f-volunteer-2ge0hjpsa1879e88-1314668114/QR_CODE/青协头像.png" mode="widthFix" style="max-height: 360rpx;"></image>
		</view>
		<view class="content">
			<view class="text-lg text-bold">
				{{teamDetail.teamName}}
			</view>
		</view>
	</view>
</view>

<view class="margin-sm radius-lg bg-white">
	<view class="padding flex justify-between">
		<view>
			<text class="">联系方式</text>
		</view>

		<view style="display:grid;">
			<text class="text-df margin-bottom-xs">{{teamDetail.mail}}</text>
			<text class="text-df margin-bottom-xs">{{teamDetail.teamLeader[1]}} {{teamDetail.teamLeader[3]}}</text>
		</view>
	</view>
	<view class="padding flex  justify-between " bindtap="members">
		<text class="">本队成员</text>
		<view style="display:flex">
			<text class="text-df ">{{teamDetail.member}}</text>
			<view class="cuIcon-right"></view>
		</view>
	</view>
	<view class="padding flex justify-between">
		<text class="">服务次数</text>
		<text class="text-df">{{teamDetail.serviceNumber}}</text>
	</view>
	<view class="padding flex justify-between">
		<text class="">志愿总时长</text>
		<text class="text-df">{{teamDetail.volunteerTime}}小时</text>
	</view>
	<view class="padding flex">
		<text class="flex-sub">队伍介绍</text>
		<text class="flex-treble text-df">{{teamDetail.teamIntro}}</text>
	</view>
	<view class="padding-xl justify-center flex">
		<button class=" cu-btn bg-red margin-tb-sm lg" bindtap="join">申请加入</button>
	</view>
</view>