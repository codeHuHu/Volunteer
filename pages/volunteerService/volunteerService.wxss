 .top-bar {
	height: 60px; 
	display: flex;
	flex-direction:row ;

 }
 .select_box{
	background: transparent;
	width: 80%;
	margin: 30rpx auto;
	position: relative;
	background: linear-gradient(to bottom, #E9E4F0, #D3CCE3);

 }
 .select{
	box-sizing: border-box;
	width: 100%;
	height: 70rpx;
	border:1px solid #efefef;
	border-radius: 8rpx;
	display: flex;
	align-items: center;
	padding: 0 20rpx;
 }
 .select_text{
	 margin-left:20rpx ;
	font-size: 26rpx;
	flex: 1;
 }
 .iconfont.icon-icon-test65
 {
	 font-size: 38rpx;
 }
 .select_img{
	width: 40rpx;
	height: 40rpx;
	display: block;
	transition:transform 0.3s;
 }
 .select_img_rotate{
	transform:rotate(180deg); 
 }
 .option_box{
	position: absolute;
	top: 70rpx;
	width: 100%;
	border:1px solid #efefef;
	box-sizing: border-box;
	height: 0;
	overflow-y: auto;
	border-top: 0;
	background: #fff;
	transition: height 0.3s;
	z-index: 999;
 }
 .option{
	display: block;
	line-height: 40rpx;
	font-size: 24rpx;
	border-bottom: 1px solid #efefef;
	padding: 10rpx;
 }

